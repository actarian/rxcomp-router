{
  "targets": {
    "browser": {
      "compile": [
        {
          "input": "web/client/*.html",
          "output": "docs/",
          "minify": false
        },
        {
          "input": "web/client/css/main.scss",
          "output": "docs/css/main.css",
          "minify": true
        },
        {
          "input": "web/client/src/main.browser.ts",
          "output": {
            "file": "docs/js/main.js",
            "format": "iife"
          },
          "globals": {
            "gsap": "gsap",
            "rxjs": "rxjs",
            "rxjs/operators": "rxjs.operators",
            "rxcomp": "rxcomp"
          },
          "minify": true
        }
      ],
      "bundle": [
        {
          "input": [
            "node_modules/gsap/dist/EasePack.js",
            "node_modules/gsap/dist/gsap.js",
            "node_modules/rxjs/bundles/rxjs.umd.js",
            "node_modules/rxcomp/dist/umd/rxcomp.js"
          ],
          "output": "docs/js/vendors.js",
          "minify": true
        }
      ]
    },
    "web": {
      "compile": [
        {
          "input": "web/client/*.html",
          "output": "web/client/dist/development/browser/",
          "minify": false
        },
        {
          "input": "web/client/css/main.scss",
          "output": "web/client/dist/development/browser/css/main.css",
          "minify": true
        },
        {
          "input": "web/client/src/main.browser.ts",
          "output": {
            "file": "web/client/dist/development/browser/js/main.js",
            "format": "iife"
          },
          "globals": {
            "gsap": "gsap",
            "rxjs": "rxjs",
            "rxjs/operators": "rxjs.operators",
            "rxcomp": "rxcomp"
          },
          "minify": true
        }
      ],
      "bundle": [
        {
          "input": [
            "node_modules/gsap/dist/EasePack.js",
            "node_modules/gsap/dist/gsap.js",
            "node_modules/rxjs/bundles/rxjs.umd.js",
            "node_modules/rxcomp/dist/umd/rxcomp.js"
          ],
          "output": "web/client/dist/development/browser/js/vendors.js",
          "minify": true
        }
      ]
    },
    "dist": {
      "compile": [
        {
          "input": "src/rxcomp-router.ts",
          "output": [
            {
              "file": "dist/cjs/",
              "format": "cjs"
            },
            {
              "file": "dist/esm/",
              "format": "esm"
            },
            {
              "file": "dist/umd/rxcomp-router.js",
              "format": "umd",
              "minify": true
            },
            {
              "file": "dist/iife/rxcomp-router.js",
              "format": "iife",
              "minify": true
            }
          ],
          "globals": {
            "rxjs": "rxjs",
            "rxjs/operators": "rxjs.operators",
            "rxcomp": "rxcomp"
          },
          "name": "rxcomp.router"
        }
      ]
    }
  },
  "server": {
    "src": "./docs",
    "path": "/rxcomp-router/",
    "host": "localhost",
    "port": 40991,
    "log": false
  },
  "tfs": false
}
